<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--
    @SQL File Name : SalesMapper.xml
    @Description : sales queries
    @Author : stoneberg
-->
<mapper namespace="kr.co.cesco.econtract.test.mapper.SalesRepository"> 
    
    <!-- Get All Customers -->
    <select id="findCustomers" resultType="Customer">
        /*SalesMapper.findCustomers*/
		SELECT 
		    customer_id,
		    first_name,
		    last_name,
		    phone,
		    email,
		    street,
		    city,
		    state,
		    zip_code
		FROM sales.customers
    </select>
    
     <!-- 프로시저 호출하기 -->
    <select id="findCustomers2" resultType="Customer" statementType="CALLABLE">
        { CALL dbo.getCustomers }
    </select>
    
    <!-- Get All Customers3 -->
    <select id="findCustomers3" resultType="java.util.HashMap">
        /*SalesMapper.findCustomers3*/
        SELECT 
            customer_id as customerId,
            first_name as firstName,
            last_name as lastName,
            phone,
            email,
            street,
            city,
            state,
            zip_code as zipCode
        FROM sales.customers
    </select>
    
    <!-- 프로시저 호출하기 -->
    <select id="getCustomersByState" parameterType="java.lang.String" resultType="Customer" statementType="CALLABLE">
        { CALL dbo.getCustomersByState(#{state, mode=IN, jdbcType=VARCHAR}) }
    </select>

</mapper>
